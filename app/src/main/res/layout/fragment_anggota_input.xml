<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnggotaInputFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INPUT DATA ANGGOTA"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/inputNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lengkap"
            android:layout_marginBottom="8dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NIM"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/inputNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="21.21.2121"
            android:layout_marginBottom="8dp"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program studi"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/inputProdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="S1 Informatika"
            android:layout_marginBottom="8dp"
            android:inputType="text"/>
<!--        <Spinner-->
<!--            android:id="@+id/inputProdi"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:entries="@array/prodi"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email@students.amikom.ac.id"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. Telp"
            android:layout_marginVertical="4dp"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/inputTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="08123456789"
            android:layout_marginBottom="8dp"
            android:inputType="phone"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Simpan"/>
    </LinearLayout>

</FrameLayout>